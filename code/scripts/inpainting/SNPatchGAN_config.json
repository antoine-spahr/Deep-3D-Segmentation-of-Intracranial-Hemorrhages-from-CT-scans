{
  "exp_name": "SNPatchGAN_18-11",
  "path": {
    "data": "../../../data/RSNA/",
    "data_valid": "../../../data/inpaint_valid_sample/",
    "output": "../../../outputs/inpainting/"
  },
  "device": "cuda:0",
  "n_thread": 0,
  "seed": 42,
  "print_progress": true,
  "dataset": {
    "n_sample": -1,
    "win_center": 50,
    "win_width": 200,
    "size": 256,
    "augmentation": {
      "train": {
        "Translate": {
          "low": -0.1,
          "high": 0.1
        },
        "Rotate": {
          "low": -10,
          "high": 10
        },
        "Scale": {
          "low": 0.9,
          "high": 1.1
        },
        "HFlip": {
          "p": 0.5
        }
      },
      "eval": {}
    },
    "mask":{
      "n_draw": [1, 4],
      "vertex": [10, 15],
      "brush_width": [10, 15],
      "angle": [0, 6.28],
      "length": [10, 30],
      "n_salt_pepper": [0, 10],
      "salt_peper_radius": [1, 3]
    }
  },
  "net": {
    "gen": {
      "in_channels": 2,
      "out_channels": 1,
      "lat_channels": 32,
      "activation": "lrelu",
      "norm": true,
      "padding_mode": "reflect",
      "bias": true,
      "upsample_mode": "nearest",
      "context_attention": true,
      "return_coarse": true,
      "context_attention_kwargs":{
        "kernel_size": 3,
        "patch_stride": 1,
        "compression_rate": 2,
        "softmax_scale": 10,
        "fuse": false,
        "fuse_kernel": 3
      }
    },
    "dis": {
      "in_channels": 2,
      "out_channels": [64, 128, 256, 256, 256, 256],
      "kernel_size": 5,
      "stride": 2,
      "bias": true,
      "activation": "relu",
      "norm": true,
      "padding_mode": "reflect",
      "sn": true,
      "self_attention": true
    }
  },
  "train": {
    "model_param":{
      "n_epoch": 50,
      "batch_size": 32,
      "lr_g": 0.001,
      "lr_d": 0.001,
      "lr_scheduler": "ExponentialLR",
      "lr_scheduler_kwargs": {
        "gamma": 0.96
      },
      "gammaL1": 0.99,
      "lambda_L1": 0.5,
      "lambda_gan": 0.5,
      "weight_decay": 0.000001,
      "num_workers": 12,
      "checkpoint_freq": 1
    },
    "model_path_to_load": {
      "gen": null,
      "dis": null
    },
    "validate_epoch": true,
    "valid_save_freq": 5
  }
}
